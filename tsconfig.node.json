{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist/node"
  },
  "include": ["vite.config.ts", "scripts", "src/services/**/*.ts", "src/data/**/*.ts", "src/types/**/*.d.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules"]
}
